<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.aitor.actividades_pantallas.Actividad3">

    <TextView android:text="Suma" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSuma" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etOp1"
        android:inputType="number"
        android:ems="1"
        android:layout_below="@+id/tvSuma"
        android:enabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="+"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/etOp1"
        android:layout_alignRight="@+id/tvSuma"
        android:layout_alignEnd="@+id/tvSuma" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="1"
        android:id="@+id/etOp2"
        android:layout_below="@+id/tvSuma"
        android:layout_toRightOf="@+id/textView"
        android:enabled="false"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/textView2"
        android:layout_toRightOf="@+id/etOp2"
        android:layout_toEndOf="@+id/etOp2"
        android:layout_alignTop="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:id="@+id/etResultado"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:maxLength="2"
        android:layout_toEndOf="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:id="@+id/btCalcular"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/etResultado"
        android:layout_toEndOf="@+id/etResultado" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preguntas correctas 0 Incorrectas 0"
        android:id="@+id/tvResultado"
        android:layout_below="@+id/btCalcular"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
